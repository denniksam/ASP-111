@model ASP_111.Models.User.ProfileViewModel
@{
    ViewData["Title"] = "Profile";
}
@if (Context.User.Identity?.IsAuthenticated != true)
{
    <h2>Только авторизированные пользователи могут просмотреть свой профиль</h2>
}
else 
{
    <section class="vh-100" style="background-color: #f4f5f7;">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-lg-9 mb-4 mb-lg-0">
                    <div class="card mb-3" style="border-radius: .5rem;">
                        <div class="row g-0">
                            <div class="col-md-4 gradient-custom text-center text-white"
                                 style="border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;">
                                <img src="/avatars/@Model.Avatar"
                                     alt="Avatar" class="img-fluid my-5" style="width: 80px;" />
                                <h5>@Model.Name</h5>
                                <p>aka '@Model.Login'</p>
                            </div>
                            <div class="col-md-8">
                                <div class="card-body p-4">
                                    <h6>Information</h6>
                                    <hr class="mt-0 mb-4">
                                    <div class="row pt-1">
                                        <div class="col-6 mb-3">
                                            <h6>Email</h6>
                                            <p class="text-muted">
                                                <span class="p-1">@Model.Email</span> 
                                                <i data-edit="email" class="bi bi-pencil mx-3" role="button"></i>
                                            </p>
                                            @if ( ! Model.IsEmailConfirmed)
                                            {
                                                <b>Not confirmed</b>
                                                <div class="row">
                                                    <div class="col col-6"><input type="text" placeholder="enter code" /></div>
                                                    <div class="col col-6"><button class="btn btn-secondary">Confirm</button></div>
                                                </div>
                                            }
                                        </div>
                                        <div class="col-6 mb-3">
                                            <h6>Registered</h6>
                                            <p class="text-muted">@Model.CreatedDt</p>
                                        </div>
                                    </div>
                                    <h6>Projects</h6>
                                    <hr class="mt-0 mb-4">
                                    <div class="row pt-1">
                                        <div class="col-6 mb-3">
                                            <h6>Recent</h6>
                                            <p class="text-muted">Lorem ipsum</p>
                                        </div>
                                        <div class="col-6 mb-3">
                                            <h6>Most Viewed</h6>
                                            <p class="text-muted">Dolor sit amet</p>
                                        </div>
                                    </div>
                                    <div class="d-flex justify-content-start">
                                        <a href="#!"><i class="bi bi-facebook mx-2"></i></a>
                                        <a href="#!"><i class="bi bi-twitter mx-2"></i></a>
                                        <a href="#!"><i class="bi bi-instagram mx-2"></i></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}