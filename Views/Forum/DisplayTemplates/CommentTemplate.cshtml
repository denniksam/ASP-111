@model ASP_111.Models.Forum.Theme.CommentViewModel

<div class="col my-4">
    <div class="card">
        <div class="card-header d-flex align-items-center">
            <img src="@Model.Author.Avatar" class="rounded-circle w40" alt="avatar" />
            <span class="mx-2">@Model.Author.Login</span>
            <i class="ms-auto">@Model.CreateDt</i>
        </div>
        <div class="card-body">
            <p class="card-text">@Model.Content</p>
        </div>
        <div class="card-footer ms-auto" style="width:100%">
            <div class="d-flex align-items-center" style="gap:1em">
                <i class="bi bi-hand-thumbs-up"></i> 234
                <i class="bi bi-hand-thumbs-down"></i> 45
                <button class="btn btn-outline-secondary ms-auto"
                      @if (true) { 
                          @Html.Raw("disabled")
                      }
                ><i class="bi bi-reply"></i></button>
            </div>
        </div>
    </div>
</div>