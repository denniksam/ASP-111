@model ASP_111.Models.Forum.Index.ForumSectionViewModel

<div class="card mb-3">
    <div class="row g-0">
        <div class="col-md-2">
            <img src="@Model.ImageUrl"
                 class="img-fluid rounded-start" 
                 alt="section">
        </div>
        <div class="col-md-10" style="position:relative;padding-bottom:40px">
            <div class="card-body">
                <h5 class="card-title">@Model.Title</h5>
                <p class="card-text">@Model.Description</p>
                <p class="card-text"><small class="text-muted">Створено: @Model.CreateDt</small></p>
            </div>
            <div class="card-footer" style="position:absolute;bottom:0">
                Автор: 
                <span title="@Model.Author.Email">
                    @Model.Author.Name
                </span>
            </div>
        </div>
    </div>
</div>
