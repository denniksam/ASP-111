@model ASP_111.Models.Forum.Section.TopicViewModel

<div class="col">
    <div class="card h-100">
        <div class="card-header">
            <img src="@Model.Author.Avatar" class="rounded-circle" alt="avatar" />
            @Model.Author.Login
            @Model.CreateDt
        </div>
        <img src="@Model.ImageUrl" class="card-img-top" alt="image" />
        <div class="card-body">
            <h5 class="card-title">@Model.Title</h5>
            <p class="card-text">@Model.Description</p>
        </div>
        <div class="card-footer ms-auto" style="width:100%">
            <div class="d-flex align-items-center" style="gap:1em">
                <i class="bi bi-hand-thumbs-up"></i> 234
                <i class="bi bi-hand-thumbs-down"></i> 45
                <a class="btn btn-outline-secondary ms-auto"
                   asp-controller="Forum" asp-action="Section" asp-route-id="@(Model.Id)"><i class="bi bi-arrow-right-square"></i></a>
            </div>
        </div>
    </div>
</div>